{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .btn-creation {
            margin: 30px auto;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">

        <div class="row">
            <a href="admin_user_create.php" class="btn btn-outline-success btn-creation">
                <i class="fa fa-plus"></i>
                Create user
            </a>
        </div>

        <table class="table">
            <thead class="thead-inverse">
            <tr>
                <th>#</th>
                <th>Username</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <th scope="row">{{ user.id }}</th>
                    <td>{{ user.username }}</td>
                    <td>{{ user.email }}</td>
                    <td>
                        <div class="btn-group" role="group" aria-label="Actions">
                            <a href="admin_user_edit.php?id={{ user.id }}" class="btn btn-outline-primary"><i class="fa fa-pencil" aria-hidden="true"></i> Edit</a>
                            <a href="admin_user_delete.php?id={{ user.id }}" class="btn btn-outline-danger btn-confirm"><i class="fa fa-trash" aria-hidden="true"></i> Delete</a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
