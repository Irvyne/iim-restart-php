{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .btn-creation {
            margin: 30px auto;
        }
        .container-admin {
            margin-top: 50px;
        }
    </style>
{% endblock %}

{% block body %}
    {% if isError|default(false) %}
        <div class="alert alert-danger text-center" role="alert">
            <strong>Oh snap!</strong> An error occurred, please try again.
        </div>
    {% endif %}
    <div class="container container-admin">
        <form method="post" action="" class="col-6 offset-3">
            <div class="form-group">
                <label for="username">Username</label>
                <input name="username" type="text" minlength="5" maxlength="20" class="form-control" id="username" placeholder="Enter username" required>
            </div>
            <div class="form-group">
                <label for="email">Email address</label>
                <input name="email" type="email" maxlength="255" class="form-control" id="email" placeholder="Enter email" required>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input name="password" type="password" minlength="3" maxlength="255" class="form-control" id="password" placeholder="Password" required>
            </div>
            <div class="abc text-center">
                <a href="admin_user.php" class="btn btn-outline-danger">
                    <i class="fa fa-remove"></i>
                    Cancel
                </a>
                <button type="submit" class="btn btn-outline-success">
                    <i class="fa fa-plus"></i>
                    Create
                </button>
            </div>
        </form>
    </div>
{% endblock %}
