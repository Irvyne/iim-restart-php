    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{% block title %}{{ title|default('Blog Rick & Morty') }}{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="css/bootstrap.min.css">
        <link rel="stylesheet" href="css/font-awesome.min.css">
        <link rel="stylesheet" href="css/app.css">
    {% endblock %}
</head>
<body>
<div class="navbar navbar-toggleable-md navbar-inverse bg-inverse">
    <div class="container d-flex justify-content-between">
        <a href="index.php" class="navbar-brand"><i class="fa fa-ambulance"></i> Rick and Morty</a>
        <ul class="navbar-nav mr-auto">
            {% if isConnected|default(false) %}
                <li class="nav-item">
                    <a class="nav-link" href="admin.php">Admin</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="admin_user.php">Admin User</a>
