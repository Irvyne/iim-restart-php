                </li>
            {% else %}
                <li class="nav-item">
                    <a class="nav-link" href="contact.php">Contact</a>
                </li>
            {% endif %}
        </ul>
        {% if isConnected|default(false) %}
            <form action="logout.php" method="post" class="form-inline my-2 my-lg-0">
                <input type="submit" class="btn btn-outline-danger my-2 my-sm-0" value="Logout">
            </form>
        {% else %}
            <form action="login.php" method="post" class="form-inline my-2 my-lg-0">
                <input name="email" type="email" class="form-control mr-sm-2" placeholder="Email">
                <input name="password" type="password" class="form-control mr-sm-2" placeholder="Password">
                <input type="submit" class="btn btn-outline-success my-2 my-sm-0" value="Login">
            </form>
        {% endif %}
    </div>
</div>

